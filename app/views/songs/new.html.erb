
<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_names_autocomplete" %>
    <datalist id="artist_names_autocomplete">
      <%= Artist.all.each do |artist| %>
        <option value="<%= artist.name %>">
      <% end %>
    </datalist>
  <br>
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  <%= f.label :note_contents %>
  <%= f.text_field :note_contents, id: "song_notes_1", multiple: true %>
  <%= f.text_field :note_contents, id: "song_notes_2", multiple: true %>
  <br>
  <%= f.submit %>
<% end %>


